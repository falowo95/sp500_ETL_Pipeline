[pycodestyle]
max-line-length = 140

[pylint.messages_control]
disable = missing-module-docstring

[pylint.typecheck]
disable = import-error

[pylint.design]
argument-naming-style = snake_case

[pylint.naming]
variable-rgx = [a-z_][a-z0-9_]{2,30}$

[pylint.basic]
good-names = df

[pylint.logging]
logging-format-style = new

[pylint.C0103]
invalid-name=_

[pylint]
disable = W0718,W1203,W0621,R0902,R0914,W0104,W0622,C0103
